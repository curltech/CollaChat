.scan-container .scan-box-container {
  display: flex;
}
.scan-container .scan-box-container .scan-none-2 {
  flex: 1;
  height: calc(25vh + 2px);
  background: rgba(0, 0, 0, 0);
}
.scan-container .scan-box-container .scan-box {
  width: calc(25vh);
  height: calc(25vh);
  border: 1px solid rgba(255, 255, 255, 0.4);
  background: rgba(0, 0, 0, 0);
}
.scan-container .scan-box-container .scan-box .scan-box-area {
  width: calc(25vh);
  height: calc(25vh);
  position: relative;
}
.scan-container .scan-box-container .scan-box .scan-box-area .top-left {
  position: absolute;
  top: -3px;
  left: -3px;
  width: 1rem;
  height: 1rem;
  border-top: 6px solid rgba(255, 255, 255, 0.4);
  border-left: 6px solid rgba(255, 255, 255, 0.4);
}
.scan-container .scan-box-container .scan-box .scan-box-area .top-right {
  position: absolute;
  top: -3px;
  right: -3px;
  width: 1rem;
  height: 1rem;
  border-top: 6px solid rgba(255, 255, 255, 0.4);
  border-right: 6px solid rgba(255, 255, 255, 0.4);
}
.scan-container .scan-box-container .scan-box .scan-box-area .bottom-left {
  position: absolute;
  bottom: -3px;
  left: -3px;
  width: 1rem;
  height: 1rem;
  border-bottom: 6px solid rgba(255, 255, 255, 0.4);
  border-left: 6px solid rgba(255, 255, 255, 0.4);
}
.scan-container .scan-box-container .scan-box .scan-box-area .bottom-right {
  position: absolute;
  bottom: -3px;
  right: -3px;
  width: 1rem;
  height: 1rem;
  border-bottom: 6px solid rgba(255, 255, 255, 0.4);
  border-right: 6px solid rgba(255, 255, 255, 0.4);
}

