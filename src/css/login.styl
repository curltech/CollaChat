.scanbox {
  background: none;
  /*.area {
    margin-top: 30px;
    width: 100%;
    height: 90%
    background-size: contain;
  }*/
  .line {
    left: calc((100vw - 25vh)/2);
    width: calc(25vh);
    height: 2px;
    background: rgba(255, 255, 255, 0.4);
    position: absolute;
    animation: myfirst 2s linear infinite alternate;
  }
  @keyframes myfirst {
    0% {
      background: rgba(255, 255, 255, 0.4);
      top: 30%;
    }
    100% {
      background: rgba(255, 255, 255, 0.4);
      top: 55%;
    }
  }
}

